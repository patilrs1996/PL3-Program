#include<omp.h>
#include<stdio.h>

void oddeven_sort(int a[],int n)
{
int phase,temp,i;
int tid=omp_get_num_threads();

for(phase=0;phase<n;++phase)
{
if(phase%2==0)
{
  #pragma omp parallel for num_threads(tid)shared(a,n)private(i,temp)
  for(i=1;i<n;i+=2)
	{
		if(a[i-1]>a[i])
		{
		temp=a[i];
		a[i]=a[i-1];
		a[i-1]=temp;
		}
	}
}

else
{
  #pragma omp parallel for num_threads(tid) shared(a,n) private(i,temp)
	for(i=1;i<n-1;i+=2)
	{
		if(a[i]>a[i+1])
		{
		temp=a[i];
		a[i]=a[i+1];
		a[i+1]=temp;
		}
	}
}

}
}

void main()
{
int a[15],i,n;
printf("Enter the array size:");
scanf("%d",&n);

for(i=0;i<n;i++)
{
printf("\nEnter the element for index location:%d:",i);
scanf("%d",&a[i]);
}

oddeven_sort(a,n);

printf("\nSorted Array:");
for(i=0;i<n;i++)
{
	printf("\t%d",a[i]);
}
printf("\n");
}



